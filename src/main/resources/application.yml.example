spring:
  ai:
    zhipuai:
      api-key: ${ZHIPUAI_API_KEY}
      base-url: "https://open.bigmodel.cn/api/paas"
      chat:
        options:
          model: GLM-4-Flash-250414
#          model: GLM-4-PLUS
      embedding:
        enabled: false

    deepseek:
      api-key: ${DEEPSEEK_API_KEY}
      base-url: "https://api.deepseek.com"
      chat:
        options:
          model: deepseek-chat
      embedding:
        enabled: false

    kimi:
      api-key: ${KIMI_API_KEY}
      base-url: "https://api.moonshot.cn/v1/chat/completions"
      chat:
        options:
          model: moonshot-v1-8k
      embedding:
        enabled: false

    mcp:
      client:
        stdio:
          servers-configuration: classpath:/mcp-server.json


web-monitor:
  configs:
    - type: AIFetcher
      name: AIMonitor
      url: https://www.baidu.com
      intervalSeconds: 600
      enabled: 0
      userQuery: 获取第一个热搜的标题
      modelName: kimi

    - type: ZzFetcher
      name: 1111
      url:
      intervalSeconds: 600
      enabled: false

    - type: CssSelectorFetcher
      name: CssSelector
      url: https://www.baidu.com
      intervalSeconds: 600
      enabled: false
      cssSelector: "#hotsearch-content-wrapper > li:nth-child(1) > a > span.title-content-title|text"
#      cssSelector: "*[id=\"lg\"] > map > area[shape='rect']|text"
#      cssSelector: "*[id=\"lg\"] > map > area[shape='rect']|attr(title)"

    - type: XPathFetcher
      name: XPathMonitor
      url: https://www.baidu.com
      intervalSeconds: 600
      enabled: true
      xPath: "//*[@id=\"hotsearch-content-wrapper\"]/li[3]/a/span[2]|text"

    - type: SeleniumFetcher
      name: SeleniumMonitor
      url: https://www.baidu.com
      intervalSeconds: 600
      enabled: false
      cssSelector: "#hotsearch-content-wrapper > li:nth-child(1) > a > span.title-content-title|text"
      xPath: "/html/body/div[3]/div[4]/div[1]/div[3]/div[3]/div/div/div/div[1]/div/h3/a/div/div/p/span/span/span|text"
      driverPath: "src/main/resources/chromedriver"
      timeout: 10

    - type: KeywordSelectorFetcher
      name: KeywordSelectorFetcher
      url: https://www.baidu.com
      intervalSeconds: 600
      enabled: 0
      keyword: "（这里填写关键词用于定位页面标签）"

  observers:
    # 控制台log
    - type: ConsoleObserver
      enabled: true

    # 邮件配置（QQ邮箱）
    - type: EmailObserver
      enabled: false
      host: smtp.example.com
      port: 587
      username: your-email@example.com
      password: your-email-password
      from: your-email@example.com
      to: recipient@example.com

    # Slack机器人配置
    - type: SlackObserver
      enabled: false
      webhookBaseUrl:

    # 企业微信机器人配置
    - type: QyWeixinObserver
      enabled: false
      webhookBaseUrl:
      webhookKey:

